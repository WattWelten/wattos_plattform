# Multi-Stage Build fÃ¼r Web App (Next.js)
FROM node:25-alpine AS base

# Installiere pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Dependencies Stage
FROM base AS deps
WORKDIR /app

# Kopiere package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/config/package.json ./packages/config/
COPY packages/shared/package.json ./packages/shared/
COPY packages/ui/package.json ./packages/ui/
COPY apps/web/package.json ./apps/web/

# Installiere Dependencies
RUN pnpm install --frozen-lockfile

# Build Stage
FROM base AS builder
WORKDIR /app

# Kopiere alles
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Baue Packages
RUN pnpm --filter @wattweiser/config build
RUN pnpm --filter @wattweiser/shared build
RUN pnpm --filter @wattweiser/ui build

# Setze Build-Argumente
ARG NEXT_PUBLIC_API_URL=http://localhost:3001/api
ENV NEXT_PUBLIC_API_URL=

# Baue Web App
RUN pnpm --filter @wattweiser/web build

# Production Stage
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Erstelle non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Kopiere Next.js Build
COPY --from=builder /app/apps/web/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "server.js"]
