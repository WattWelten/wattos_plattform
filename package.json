{
  "name": "wattweiser-platform",
  "version": "0.1.0",
  "private": true,
  "description": "WattWeiser - Modulare, DSGVO-konforme KI-Plattform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:mvp": "turbo run dev --filter=@wattweiser/web --filter=@wattweiser/gateway --filter=@wattweiser/chat-service --filter=@wattweiser/agent-service --filter=@wattweiser/rag-service --filter=@wattweiser/avatar-service --filter=@wattweiser/voice-service --filter=@wattweiser/crawler-service --filter=@wattweiser/admin-service --filter=@wattweiser/tool-service --filter=@wattweiser/llm-gateway",
    "build": "turbo run build",
    "build:mvp": "turbo run build --filter=@wattweiser/web --filter=@wattweiser/gateway --filter=@wattweiser/chat-service --filter=@wattweiser/agent-service --filter=@wattweiser/rag-service --filter=@wattweiser/avatar-service --filter=@wattweiser/voice-service --filter=@wattweiser/crawler-service --filter=@wattweiser/admin-service --filter=@wattweiser/tool-service --filter=@wattweiser/llm-gateway",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:contract": "turbo run test:contract",
    "test:e2e": "turbo run test:e2e",
    "test:perf": "node scripts/performance-tests.js",
    "test:perf:simple": "autocannon -d 20 -c 20 http://localhost:3001/health",
    "test:all": "node scripts/test-all.js",
    "test:local": "node scripts/test-all.js",
    "coverage": "turbo run coverage",
    "dev:all": "concurrently \"pnpm mock:start\" \"turbo run dev\"",
    "mock:start": "ts-node --transpile-only scripts/mock-api.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "audit:local": "node scripts/audit-local.js",
    "cursor:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-cursor-global.ps1",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && pnpm clean:cache",
    "clean:cache": "pnpm store prune",
    "clean:build": "turbo run clean && Get-ChildItem -Path . -Directory -Recurse -Filter \"dist\" -ErrorAction SilentlyContinue | Where-Object { $_.FullName -notlike \"*\\node_modules\\*\" -and $_.FullName -notlike \"*\\.git\\*\" } | Remove-Item -Recurse -Force -ErrorAction SilentlyContinue",
    "db:migrate": "pnpm --filter @wattweiser/db migrate:deploy",
    "db:generate": "cd apps/api && npm run db:generate",
    "up": "docker compose up -d",
    "down": "docker compose down -v",
    "smoke": "node scripts/healthcheck.mjs",
    "docker:start": "bash scripts/docker-start.sh",
    "docker:start:win": "powershell -ExecutionPolicy Bypass -File scripts/docker-start.ps1",
    "docker:start:auto": "bash scripts/docker-auto.sh",
    "docker:stop": "docker compose down -v",
    "docker:status": "docker compose ps",
    "docker:restart": "docker compose restart",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build:gateway": "docker build -f docker/Dockerfile.gateway -t wattos-gateway:latest .",
    "docker:build:web": "docker build -f docker/Dockerfile.web -t wattos-web:latest --build-arg NEXT_PUBLIC_API_URL=http://localhost:3001/api .",
    "docker:build:customer-portal": "docker build -f docker/Dockerfile.customer-portal -t wattos-customer-portal:latest --build-arg NEXT_PUBLIC_API_URL=http://localhost:3001/api .",
    "docker:build:console": "docker build -f docker/Dockerfile.console -t wattos-console:latest --build-arg NEXT_PUBLIC_API_URL=http://localhost:3001/api .",
    "test:wsl": "powershell -ExecutionPolicy Bypass -File scripts/test-wsl.ps1",
    "test:wsl:package": "powershell -ExecutionPolicy Bypass -File scripts/test-wsl.ps1",
    "test:docker": "docker build -f docker/Dockerfile.test -t wattos-test:latest . && docker run --rm -v \"%cd%/test-results:/app/test-results\" wattos-test:latest",
    "build:wsl": "powershell -ExecutionPolicy Bypass -File scripts/build-wsl.ps1",
    "build:wsl:package": "powershell -ExecutionPolicy Bypass -File scripts/build-wsl.ps1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node-fetch": "^2.6.13",
    "autocannon": "^8.0.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "esbuild": "^0.27.2",
    "express": "^4.22.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "node-fetch": "^3.3.2",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^2.1.9",
    "@vitest/coverage-v8": "^2.1.9"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "zod": "^4.2.1",
      "@hookform/resolvers": "^5.2.2",
      "react-hook-form": "^7.68.0"
    }
  },
  "dependencies": {
    "@next/env": "^16.1.1",
    "baseline-browser-mapping": "^2.9.11",
    "browserslist": "^4.28.1",
    "caniuse-lite": "^1.0.30001762"
  }
}