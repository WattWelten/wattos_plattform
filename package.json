{
  "name": "wattweiser-platform",
  "version": "0.1.0",
  "private": true,
  "description": "WattWeiser - Modulare, DSGVO-konforme KI-Plattform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:contract": "turbo run test:contract",
    "test:e2e": "turbo run test:e2e",
    "test:perf": "autocannon -d 20 -c 20 http://localhost:4001/api/v1/chat",
    "test:all": "node scripts/test-all.js",
    "test:local": "node scripts/test-all.js",
    "coverage": "turbo run coverage",
    "dev:all": "concurrently \"pnpm mock:start\" \"turbo run dev\"",
    "mock:start": "ts-node --transpile-only scripts/mock-api.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "audit:local": "node scripts/audit-local.js",
    "cursor:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-cursor-global.ps1",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:generate": "cd apps/api && npm run db:generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "autocannon": "^8.0.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "esbuild": "^0.25.0",
    "node-fetch": "^3.3.2",
    "@types/node-fetch": "^2.6.11"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}