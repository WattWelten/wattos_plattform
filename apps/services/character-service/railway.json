{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/services/character-service && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/services/character-service && npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "healthcheckInterval": 10,
    "scaling": {
      "minReplicas": 1,
      "maxReplicas": 3,
      "targetCPU": 70,
      "targetMemory": 80
    }
  }
}
