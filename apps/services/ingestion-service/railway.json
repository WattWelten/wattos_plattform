{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/services/ingestion-service && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd apps/services/ingestion-service && python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "healthcheckInterval": 10,
    "scaling": {
      "minReplicas": 1,
      "maxReplicas": 3,
      "targetCPU": 70,
      "targetMemory": 80
    }
  }
}
