{
    "$schema":  "https://turbo.build/schema.json",
    "globalDependencies":  [
                               "**/.env.*local"
                           ],
    "tasks":  {
                  "build":  {
                                "dependsOn":  [
                                                  "^build"
                                              ],
                                "outputs":  [
                                                ".next/**",
                                                "dist/**",
                                                "build/**",
                                                "!.next/cache/**"
                                            ],
                                "env":  [
                                            "NODE_ENV",
                                            "NEXT_PUBLIC_*"
                                        ]
                            },
                  "dev":  {
                              "cache":  false,
                              "persistent":  true
                          },
                  "lint":  {
                               "dependsOn":  [
                                                 "^build"
                                             ],
                               "outputs":  [

                                           ]
                           },
                  "test":  {
                               "dependsOn":  [
                                                 "^build"
                                             ],
                               "outputs":  [
                                               "coverage/**"
                                           ]
                           },
                  "test:unit":  {
                                    "dependsOn":  [
                                                      "^build"
                                                  ],
                                    "outputs":  [

                                                ]
                                },
                  "test:integration":  {
                                           "dependsOn":  [
                                                             "^build"
                                                         ],
                                           "outputs":  [

                                                       ]
                                       },
                  "test:contract":  {
                                        "dependsOn":  [
                                                          "^build"
                                                      ],
                                        "outputs":  [

                                                    ]
                                    },
                  "test:e2e":  {
                                   "dependsOn":  [
                                                     "^build"
                                                 ],
                                   "outputs":  [
                                                   "playwright-report/**",
                                                   "test-results/**"
                                               ]
                               },
                  "coverage":  {
                                   "dependsOn":  [
                                                     "^build"
                                                 ],
                                   "outputs":  [
                                                   "coverage/**"
                                               ]
                               },
                  "type-check":  {
                                     "dependsOn":  [
                                                       "^build"
                                                   ],
                                     "outputs":  [

                                                 ],
                                     "cache":  false
                                 },
                  "clean":  {
                                "cache":  false
                            }
              }
}
