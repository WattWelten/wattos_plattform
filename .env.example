# WattOS Platform Environment Variables
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# Allgemeine Konfiguration
NODE_ENV=development

# Datenbank
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wattos

# Redis
REDIS_URL=redis://localhost:6379

# Next.js Public Variables (werden im Browser verfÃ¼gbar)
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=http://localhost:3006

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Service Ports (optional, Standardwerte werden verwendet wenn nicht gesetzt)
# PORT=3001  # Gateway
# PORT=3000  # Web
# PORT=3006  # Chat-Service
# PORT=3003  # Agent-Service
# PORT=3005  # RAG-Service
# PORT=3009  # Avatar-Service
# PORT=3016  # Voice-Service
# PORT=3015  # Crawler-Service

# LLM Gateway (falls verwendet)
LLM_GATEWAY_URL=http://localhost:3002

# Service URLs (fÃ¼r Service-zu-Service Kommunikation)
AGENT_SERVICE_URL=http://localhost:3003
RAG_SERVICE_URL=http://localhost:3005
CHAT_SERVICE_URL=http://localhost:3006
AVATAR_SERVICE_URL=http://localhost:3009
VOICE_SERVICE_URL=http://localhost:3016
CRAWLER_SERVICE_URL=http://localhost:3015

# Streaming
STREAMING_ENABLED=true
STREAMING_CHUNK_SIZE=50

# WebSocket
WEBSOCKET_ENABLED=true

# JWT/Keycloak (falls verwendet)
JWT_SECRET=your-secret-key-here
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=wattos
KEYCLOAK_CLIENT_ID=wattos-client

# Swagger/OpenAPI
ENABLE_SWAGGER=true
EXPORT_OPENAPI_SPEC=false
