# ============================================
# WattOS Plattform - Environment Variables
# ============================================
# Kopiere diese Datei zu .env und passe die Werte an
# cp .env.example .env

# ============================================
# Allgemeine Konfiguration
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# Database (Pflicht)
# ============================================
# PostgreSQL Connection String
# Für lokale Entwicklung mit Docker Compose:
DATABASE_URL=postgresql://wattos:wattos_dev_password@localhost:5432/wattos_plattform

# ============================================
# Redis (Pflicht)
# ============================================
# Redis Connection String
# Für lokale Entwicklung mit Docker Compose:
REDIS_URL=redis://:wattos_redis_password@localhost:6379

# ============================================
# API Gateway (Pflicht)
# ============================================
# JWT Secret - MUSS mindestens 32 Zeichen lang sein!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-required-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3002
ENABLE_SWAGGER=true

# ============================================
# OIDC/Keycloak (Optional)
# ============================================
# OIDC_AUTHORIZATION_URL=https://keycloak.example.com/auth/realms/wattos/protocol/openid-connect/auth
# OIDC_TOKEN_URL=https://keycloak.example.com/auth/realms/wattos/protocol/openid-connect/token
# OIDC_CLIENT_ID=wattos-client
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_CALLBACK_URL=http://localhost:3001/api/auth/callback

# ============================================
# Cache Konfiguration
# ============================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================
# LLM Provider (Optional, aber empfohlen für Tests)
# ============================================
# Mindestens ein Provider sollte konfiguriert sein

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Google
# GOOGLE_API_KEY=your-google-api-key

# ============================================
# Service URLs (Optional - werden automatisch erkannt)
# ============================================
# Standard-Ports für lokale Entwicklung:
# Gateway: 3001
# Web: 3000
# Customer Portal: 3002
# Chat Service: 3006
# RAG Service: 3005
# Agent Service: 3003
# Tool Service: 3004
# Admin Service: 3007
# Avatar Service: 3009
# Video Service: 3017
# Voice Service: 3016
# Crawler Service: 3015
# LLM Gateway: 3017
# Ingestion Service: 8001
# Summary Service: 3018
# Feedback Service: 3010
# Character Service: 3013
# Customer Intelligence Service: 3014

# Service URLs (nur setzen wenn abweichend von Standard)
# LLM_GATEWAY_URL=http://localhost:3017
# RAG_SERVICE_URL=http://localhost:3005
# CHAT_SERVICE_URL=http://localhost:3006
# AGENT_SERVICE_URL=http://localhost:3003
# TOOL_SERVICE_URL=http://localhost:3004
# ADMIN_SERVICE_URL=http://localhost:3007
# CHARACTER_SERVICE_URL=http://localhost:3013
# CUSTOMER_INTELLIGENCE_SERVICE_URL=http://localhost:3014
# CRAWLER_SERVICE_URL=http://localhost:3015
# VOICE_SERVICE_URL=http://localhost:3016
# AVATAR_SERVICE_URL=http://localhost:3009
# VIDEO_SERVICE_URL=http://localhost:3017
INGESTION_SERVICE_URL=http://localhost:8001

# ============================================
# Avatar Service (Optional)
# ============================================
# Avaturn.me API für Avatar-Erstellung
# AVATURN_API_KEY=your-avaturn-api-key
# AVATURN_API_URL=https://api.avaturn.me

# ============================================
# Video Service (Optional)
# ============================================
# Video Storage Konfiguration
# VIDEO_STORAGE_TYPE=local
# VIDEO_STORAGE_LOCAL_PATH=./storage/videos
# VIDEO_STORAGE_BUCKET=videos
# VIDEO_STORAGE_ENDPOINT=
# VIDEO_STORAGE_ACCESS_KEY_ID=
# VIDEO_STORAGE_SECRET_ACCESS_KEY=
# VIDEO_STORAGE_REGION=us-east-1
# VIDEO_CDN_URL=
# VIDEO_MAX_FILE_SIZE=104857600
# VIDEO_MAX_DURATION=600

# ============================================
# Voice Service (Optional)
# ============================================
# ElevenLabs
# ELEVENLABS_API_KEY=sk_your-elevenlabs-api-key
# ELEVENLABS_VOICE_ID=your-voice-id

# TTS/STT Provider
TTS_PROVIDER=openai
STT_PROVIDER=openai

# ============================================
# Vector Store (Optional)
# ============================================
# Standard: pgvector (empfohlen für lokale Entwicklung)
VECTOR_STORE_TYPE=pgvector

# OpenSearch (nur wenn verwendet)
# OPENSEARCH_URL=http://localhost:9200
# OPENSEARCH_USERNAME=admin
# OPENSEARCH_PASSWORD=admin

# ============================================
# Feature Flags
# ============================================
STREAMING_ENABLED=true
WEBSOCKET_ENABLED=true
SANDBOX_ENABLED=false

# ============================================
# Performance & Observability
# ============================================
LOG_LEVEL=info
SERVICE_NAME=wattos-service
METRICS_ENABLED=true
METRICS_MAX_HISTOGRAM_SIZE=1000

# ============================================
# OpenTelemetry (Optional)
# ============================================
OTEL_ENABLED=false
OTEL_EXPORTER_TYPE=console
# OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
# OTEL_EXPORTER_ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# ============================================
# Production Settings (Optional)
# ============================================
EXPORT_OPENAPI_SPEC=false
